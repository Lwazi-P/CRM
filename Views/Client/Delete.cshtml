
@model CRM_ManagementInterface.Models.Clients
@{
}


@{
    ViewData["Title"] = "Delete Client";
}

<h2>Delete Client</h2>

<h3>Are you sure you want to delete this client?</h3>

<div>
    <dl class="row">
        <dt class="col-sm-2">Title</dt>
        <dd class="col-sm-10">@Model.Title?.TitleName</dd>

        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Surname</dt>
        <dd class="col-sm-10">@Model.Surname</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>

        <dt class="col-sm-2">Contact Number</dt>
        <dd class="col-sm-10">@Model.ContactNumber</dd>

        <dt class="col-sm-2">Address</dt>
        <dd class="col-sm-10">@Model.Address</dd>

        <dt class="col-sm-2">Client Type</dt>
        <dd class="col-sm-10">@Model.ClientType?.ClientTypeName</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="ClientId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
